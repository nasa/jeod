//===========================TRICK HEADER=====================
// PURPOSE:
//==============================================================================
// This simulation is a demonstration simulation for the lunar environment
// and orbital dynamics models in Trick.

// Define job calling intervals
#define DYNAMICS 0.50      // Moon/orbital dynamics interval
#define ENVIRONMENT 100.00 // Environment update interval

// Include the default system classes:
#include "sim_objects/default_trick_sys.sm"

// Include the default jeod object
#include "jeod_sys.sm"

// Define the phase initialization priorities.
#include "default_priority_settings.sm"

#include "time_TAI_UTC_UT1_TT_GMST.sm"

#include "dynamics.sm"
#include "earth_basic.sm"
#include "environment.sm"
#include "moon_basic.sm"
#include "sun_basic.sm"

//***************************************************************
// CLASS: (VehSimObject)
// PURPOSE:
//  ( This sim object models a vehicle in space.)
//***************************************************************
#include "Base/vehicle_baseline.sm"

// Include headers for classes that this class contains:
##include "dynamics/body_action/include/dyn_body_frame_switch.hh"
##include "dynamics/derived_state/include/relative_derived_state.hh"

class VehSimObject: public VehicleBasicSimObject
{
public:
    jeod::SphericalHarmonicsGravityControls earth_grav_ctrl;
    jeod::SphericalHarmonicsGravityControls sun_grav_ctrl;
    jeod::SphericalHarmonicsGravityControls moon_grav_ctrl;
    jeod::RelativeDerivedState embary;

    jeod::DynBodyFrameSwitch frame_switch;

    // Constructor
    VehSimObject(jeod::DynManager & dyn_mngr_in)
        : VehicleBasicSimObject(dyn_mngr_in)

    {
        P_DYN("initialization") embary.initialize(dyn_body, dyn_manager);
        (DYNAMICS, "environment") embary.update();
    }

    VehSimObject(const VehSimObject &) = delete;
    VehSimObject & operator=(const VehSimObject &) = delete;
};

VehSimObject veh(dynamics.dyn_manager);

IntegLoop sim_integ_loop(DYNAMICS) dynamics;
