/*===========================TRICK HEADER=====================

This sim is used to verify the JEOD gravity-torque model

*******************************************************************************/

// Define job calling intervals
#define DYNAMICS      1.0

// Include the default system classes:
#include "sim_objects/default_trick_sys.sm"
#include "jeod_sys.sm"
#include "default_priority_settings.sm"

// Include the standard S-modules:
#include "time_dyntime_only.sm"
#include "dynamics.sm"
#include "environment_sans_de405.sm"

/*****************************************************************************
Earth Sim Object
Purpose:(Provides a planet called "Earth", but it is only loosely based on
         Earth. It has a unique gravity field that is used for testing whether
         the application of spherical harmonics produces an a acceleration
         that matches with that produced by a set of 12 point-masses; the 12
         point-masses were used to generate the spherical harmonics.
*****************************************************************************/
#include "Base/planet_generic.sm"
##include "environment/planet/data/include/earth.hh"
##include "environment/gravity/verif/data/include/grav_verif.hh"

class EarthSimObject: public PlanetGenericSimObject{
 public:
  jeod::Planet_earth_default_data  earth_default_data;
  jeod::SphericalHarmonicsGravitySource_grav_verif_default_data grav_default_data;

  EarthSimObject( jeod::DynManager   & dyn_manager_in,
                  jeod::GravityManager & grav_in)
    :
    PlanetGenericSimObject( dyn_manager_in,
                            grav_in,
                            earth_default_data,
                            grav_default_data)
  {
  };
 private:
  // Unimplemented copy constructor and assignment operator
  EarthSimObject (const EarthSimObject&);
  EarthSimObject & operator = (const EarthSimObject&);
};

EarthSimObject earth( dynamics.dyn_manager,
                      env.gravity_manager);


/*****************************************************************************
VehicleSimObject
Purpose:(Models the vehicle)
*****************************************************************************/
#include "Base/vehicle_baseline.sm"

// Include headers for classes that this class contains:
##include "dynamics/body_action/include/dyn_body_init_lvlh_rot_state.hh"
##include "dynamics/derived_state/include/planetary_derived_state.hh"
##include "interactions/gravity_torque/include/gravity_torque.hh"
##include "environment/gravity/verif/gravity_verification/include/gravity_verif.hh"

class VehicleSimObject: public VehicleBasicSimObject
{
 public:
  jeod::DynBodyInitLvlhRotState lvlh_init;
  jeod::GravityTorque grav_torque;

  jeod::GravityVerification grav_verif;

  double attitude_PYR[3]; // (degree) spacecraft attitude ( PYR euler angles)
  double position[3];

  //Constructor
  VehicleSimObject( jeod::DynManager & dyn_mngr_in)
    :
    VehicleBasicSimObject( dyn_mngr_in)
  {
    ("initialization") grav_torque.initialize( dyn_body );

    (DYNAMICS, "environment") grav_torque.update();
    (DYNAMICS, "environment") grav_verif.verify_grav_torque(
                                                         attitude_PYR,
                                                         position,
                                                         grav_torque.torque);
  }

 private:
  VehicleSimObject (const VehicleSimObject&);
  VehicleSimObject & operator = (const VehicleSimObject&);
};
VehicleSimObject vehicle ( dynamics.dyn_manager );

IntegLoop sim_integ_loop (DYNAMICS) dynamics;
